{
  "title": "module_rubric-content_schema",
  "description": "schema du contenu textuel du module rubric",
  "type": "object",
  "properties": {
    "title": {
      "description": "titre de la rubric",
      "type": "string",
      "input": "input-text"
    },
    "rubric": {
      "description": "une rubric",
      "type": "array",
      "items": {
        "description": "sous blocs de la rubric",
        "type": "object",
        "properties": {
          "date": {
            "description": "date",
            "type": "string",
            "input": "input-text"
          },
          "title": {
            "description": "title",
            "type": "string",
            "input": "input-text"
          },
          "block": {
            "type": "array",
            "items": {
              "description": "tout le contenu des blocs de la rubric",
              "type": "object",
              "properties": {
                "title": {
                  "description": "titre du sous block",
                  "type": "string",
                  "input": "input-text"
                },
                "content": {
                  "description": "contenu du sous block sous la forme d'un tableau dont chaque cellule correspond à une ligne",
                  "type": "array",
                  "items": {
                    "description": "contenu textuel au format markdown: \n pour retourner à la ligne",
                    "type": "string",
                    "input": "textfield-markdown"
                  },
                  "minItems": 1,
                  "uniqueItems": false
                }
              },
              "required": [
                "title",
                "content"
              ]
            },
            "minItems": 1,
            "uniqueItems": false
          }
        },
        "required": [
          "date",
          "title",
          "block"
        ]
      },
      "minItems": 1,
      "uniqueItems": false
    }
  },
  "required": [
    "title",
    "rubric"
  ]
}
